<br>
<div class="container-fluid new_session">

  <div class="form-signin">
    <h2 class="form-signin-heading">Einloggen, bitte!</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, placeholder: "Mailadresse", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Funky Passwort", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Push the button", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      <br>
    </div>
  </div>
</div>
